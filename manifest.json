{
  "manifest_version": 3,
  "name": "YT Ad Speedup",
  "version": "1.1.8",
  "description": "Speeds up YT ads",
  
  "permissions": [
    "storage",
    "tabs",
    "debugger"
  ],
  
  "host_permissions": [
    "*://www.youtube.com/*",
    "*://youtube.com/*",
    "*://www.youtube-nocookie.com/*",
    "*://youtube-nocookie.com/*",
    "*://music.youtube.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },
    
  "action": {
    "default_popup": "popup/pop.html",
    "default_title": "YT Ad Speedup"
  },

  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*",
        "*://youtube.com/*",
        "*://www.youtube-nocookie.com/*",
        "*://youtube-nocookie.com/*",
        "*://music.youtube.com/*"
      ],
      "js": [
        "content/playerInit.js",
        "content/speedSupervisor.js",
        "content/speedMgmt.js",
        "content/videoObserver.js"
      ],
      "run_at": "document_end"
    }
  ],

  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  }
}